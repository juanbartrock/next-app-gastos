{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "npx prisma generate && next build"
      }
    }
  ],
  "functions": {
    "src/app/api/ai/**/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/alertas/evaluate/route.ts": {
      "maxDuration": 25
    },
    "src/app/api/alertas/scheduler/route.ts": {
      "maxDuration": 20
    },
    "src/app/api/scraping/**/route.ts": {
      "maxDuration": 25
    }
  },
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/twilio",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Twilio-Signature, Content-Type, Accept" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    },
    {
      "source": "/api/ai/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=300, stale-while-revalidate=600" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/ai/:path*",
      "destination": "/api/ai/:path*"
    }
  ]
} 